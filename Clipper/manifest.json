{
    "name": "CLIPPING",
    "description": "Utilization Tools",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": ["clipboardRead", "clipboardWrite", "storage", "activeTab"],
    "action": {
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "background.js"
    }
}